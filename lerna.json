{
  "npmClient": "npm",
  "packages": ["packages/*"],
  "version": "independent",
  "command": {
    "version": {
      "conventionalCommit": true,
      "message": "chore(release): publish",
      "ignoreChanges": ["package-lock.json", "packages/**/package-lock.json"]
    },
    "publish": {
      "ignoreChanges": ["package-lock.json", "packages/**/package-lock.json"]
    }
  }
}
